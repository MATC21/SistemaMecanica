<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaMecanica.Views.MasterPage"
             Title="MasterPage">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>

                <Label Text="Menu" Grid.Column="1" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" FontSize="30"/>

                <!--<Button Text="Agregar Automovil" Grid.Column="1" Grid.Row="1" x:Name="btnAgregarAutomovil" BackgroundColor="White"  Clicked="btnAgregarAutomovil_Clicked" />-->
                <Button Text="Agregar Cliente" Grid.Column="1" Grid.Row="2" x:Name="btnAgregarCliente" BackgroundColor="White" Clicked="btnAgregarCliente_Clicked" />
                <Button Text="Cerrar sesión" Grid.Column="1" Grid.Row="5" x:Name="btnLogout" BackgroundColor="White" Clicked="btnLogout_Clicked" />


                <ImageButton Grid.Column="0" Grid.Row="1" BackgroundColor="White" Source="IconInicio.png"/>
                <ImageButton Grid.Column="0" Grid.Row="2" BackgroundColor="White" Source="IconImagenes.png"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>