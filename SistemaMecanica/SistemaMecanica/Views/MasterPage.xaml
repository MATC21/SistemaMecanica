<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaMecanica.Views.MasterPage"
             Title="MasterPage">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>

                <Label Text="Menu" Grid.Column="1" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" FontSize="30"/>

                <Button Text="Agregar Cliente" Grid.Column="1" Grid.Row="1" x:Name="btnAgregarCliente" BackgroundColor="White" Clicked="btnAgregarCliente_Clicked" />
                <Button Text="Agregar Vehículo" Grid.Column="1" Grid.Row="2" x:Name="btnAgregarVehículo" BackgroundColor="White" Clicked="btnAgregarVehículo_Clicked" />
                <Button Text="Agregar Marca" Grid.Column="1" Grid.Row="3" x:Name="btnAgregarMarca" BackgroundColor="White" Clicked="btnAgregarMarca_Clicked" />
                <Button Text="Agregar Modelo" Grid.Column="1" Grid.Row="4" x:Name="btnAgregarModelo" BackgroundColor="White" Clicked="btnAgregarModelo_Clicked" />
                <Button Text="Agregar Tarea" Grid.Column="1" Grid.Row="5" x:Name="btnAgregarTarea" BackgroundColor="White" Clicked="btnAgregarTarea_Clicked" />
                <Button Text="Cerrar sesión" Grid.Column="1" Grid.Row="13" x:Name="btnLogout" BackgroundColor="White" Clicked="btnLogout_Clicked" />


                <ImageButton Grid.Column="0" Grid.Row="1" BackgroundColor="White" Source="IconUser.png"/>
                <ImageButton Grid.Column="0" Grid.Row="2" BackgroundColor="White" Source="IconReparacion.png"/>
                <ImageButton Grid.Column="0" Grid.Row="3" BackgroundColor="White" Source="IconCompletado.png"/>
                <ImageButton Grid.Column="0" Grid.Row="4" BackgroundColor="White" Source="IconProceso.png"/>
                <ImageButton Grid.Column="0" Grid.Row="5" BackgroundColor="White" Source="IconAddCliente.png"/>
                <ImageButton Grid.Column="0" Grid.Row="13" BackgroundColor="White" Source="IconLogout.png"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>